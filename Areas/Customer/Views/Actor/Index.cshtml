@model Actor
<div class="card profile-card p-3">
    <div class="d-flex align-items-start">
        <img src="~/images/cast/@Model.ProfilePicture" alt="Profile Picture" class="profile-img">
        <div>
            <h5 class="mb-1">@($"{Model.FirstName} {Model.LastName}")</h5>
            <p class="mb-2">
                <strong>Bio:</strong> @Model.Bio
            </p>
            <p class="mb-2">
                <strong>News:</strong> @Model.News
            </p>
            <a href="#" class="text-decoration-none">Social media</a>
        </div>
    </div>
</div>

<style>
    .profile-card {
        max-width: 600px;
        margin: 50px auto;
    }

    .profile-img {
        width: 80px;
        height: 80px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 15px;
    }
</style>