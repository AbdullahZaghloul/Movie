@model Movie
<div class="container my-5">
    <div class="d-flex align-items-center mb-3">
        @if (Model.MovieStatus == MovieStatus.Available)
        {
            <span class="badge bg-success mb-3">@Model.MovieStatus</span>
        }
        else if (Model.MovieStatus == MovieStatus.Upcoming)
        {
            <span class="badge bg-primary mb-3">@Model.MovieStatus</span>
        }
        else if (Model.MovieStatus == MovieStatus.Expired)
        {
            <span class="badge bg-danger mb-3">@Model.MovieStatus</span>
        }
        <h1 class="h3 mb-0">Details Venom: Let There Be Carnage</h1>
    </div>

    <div class="row g-4">
        <div class="col-md-4">
            <img src="~/images/movies/@Model.ImgUrl" alt="Movie Poster" class="movie-poster">
        </div>

        <div class="col-md-8">
            <p>Aenean fermentum. Donec ut mauris eget massa tempor convallis.</p>

            <p><strong>Price:</strong> <span class="badge bg-secondary">@Model.Price</span></p>
            <p><strong>Cinema:</strong> @Model.Cinema.Name</p>
            <p><strong>Start Date:</strong> @Model.StartDate</p>
            <p><strong>End Date:</strong> @Model.EndDate</p>
            <p><strong>Category:</strong> @Model.Category</p>

            <div class="d-flex align-items-center mb-3">
                @foreach (var item in ViewBag.Actors)
                {
                    foreach (var actorMovie in Model.ActorMovies)
                    {
                        if (item.Id == actorMovie.ActorId)
                        {
                            <a href="/Customer/Actor/Index/@item.Id">
                                <img src="~/images/cast/@item.ProfilePicture" alt="" class="profile-img">
                            </a>
                        }
                    }
                }
            </div>

            <h5>Trailer</h5>

            <div class="text-center mb-3">
                <div style="width: 70%; max-width: 400px;">
                    <div class="ratio ratio-16x9">
                        <iframe src="https://www.youtube.com/embed/hamletforaoon" title="Trailer" allowfullscreen></iframe>
                    </div>
                </div>
            </div>

            <div style="width: 70%; max-width: 400px;" class="text-start">
                <a href="#" class="btn btn-success mt-2">Book Ticket</a>
            </div>

        </div>
    </div>
</div>

<style>
    .movie-poster {
        width: 100%;
        border-radius: 10px;
    }

    .profile-img {
        width: 40px;
        height: 40px;
        object-fit: cover;
        border-radius: 50%;
        margin-right: 5px;
    }
</style>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
